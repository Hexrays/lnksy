<h2>add a new link</h2>
<%= form_for @post, :url => {:controller => 'posts', :action => "create" } do |f| %>
	<div class="post">
		<%= f.label :link %>
		<%= f.text_field :link_url %> <br/>

		<%= f.label :folder %>
		<%= f.select :folder_id, options_from_collection_for_select(Folder.order("name"), 'id', 'name') %><br>

	
		<%= f.label :description %><br>
		<%= f.text_area :description, :size => "40x3" %>
	</div>
  <div class="actions">
	  <%= f.submit "Submit!" %>
  </div>
<% end %>