<h2>add a new link</h2>
<%= form_for @post, :url => {:controller => 'posts', :action => "create" } do |f| %>
	<div class="post">
		<%= f.text_field :link_url, placeholder: "Url..."  %> <br/>

		<%= f.select :folder_id, options_from_collection_for_select(Folder.order("name"), 'id', 'name'), :include_blank => "Select a Folder..." %><br>
	
		<%= f.text_area :description, placeholder: "Description..." %>

		<%= f.submit "Submit!" %>

<% end %>