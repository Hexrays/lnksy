<header class="folder">
	<h2>Most Recent LNKS!</h2>
</header>

	<% if @user.posts.count > 0 %>
	<ul class="link-list">
		<% @user.posts.take(25).each do |p| %>
		<li>
			<div class="col2-links">
				<a href="<%= p.link_url %>" target="_blank">  <%= p.title %></a>- <span class="url"><%= p.strip_url %></span>
				<% if current_user && current_user.id == @user.id %>
					<span class='hide right post-edit'><%= link_to 'Delete', p, method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-link' %> || <%= link_to "Edit", edit_post_path(p), class: 'delete-link' %></span>
				<% end %>
				<p><%= p.description %></p>
			</div>
		</li>
		<% end %>
	</ul>
	<% else %>
	<ul class="link-list no-links">
		<li class="bigger">Welcome!</li>
		<li>Why</li>
		<li>don't</li>
		<li>you</li>
		<li>start</li>
		<li>adding</li>
		<li>some</li>
		<li>LNKS?</li>
	</ul>
	<% end %>