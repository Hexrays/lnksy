<div class="post-form">
	<%= form_for @post, :url => {:controller => 'posts', :action => "update" } do |f| %>
		<div class="post">
			<%= f.text_field :title, placeholder: "Title"  %> <br/>

			<%= f.select :folder_id, options_from_collection_for_select(current_user.folders.order("name"), 'id', 'name', :selected => @post.folder_id) %><br>
		
			<%= f.text_area :description, placeholder: "Description..." %>

			<%= f.submit "Change Me!", class: 'button' %>
	<% end %>
</div>